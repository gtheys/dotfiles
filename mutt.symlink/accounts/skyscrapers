# Account Settings -----------------------------------
set spoolfile = "+skyscrapers/INBOX"

# Alternate email addresses.
#alternates 

# Mailboxes to show in the sidebar.
mailboxes +skyscrapers/INBOX \
          +skyscrapers/archive \
          +skyscrapers/sent \
          +skyscrapers/drafts \

# Other special folders.
set mbox      = "+skyscrapers/archive"
set postponed = "+skyscrapers/drafts"

color status cyan default

macro index D \
    "<save-message>+sksyscrapers/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+skyscrapers/Spam<enter>"  \
        "mark message as spam"

