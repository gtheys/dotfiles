# AIDEV-NOTE: Color precedence - UDA colors (work_state) take priority over most other rules
rule.precedence.color=deleted,completed,active,uda.,keyword.,tag.,project.,overdue,scheduled,due.today,due,blocked,blocking,recurring,tagged

# AIDEV-NOTE: Jira ID UDA for tracking Jira ticket references
uda.jiraid.type=string
uda.jiraid.label=JiraID

# AIDEV-NOTE: Repository UDA for tracking which repository a task belongs to
uda.repository.type=string
uda.repository.label=Repo

# AIDEV-NOTE: Work State UDA for tracking workflow states
uda.work_state.type=string
uda.work_state.label=WorkState
uda.work_state.values=approved,review,draft,rejected,todo,inprogress,done,new
uda.work_state.default=new

# AIDEV-NOTE: Color coding for work states is defined in nord.theme

# AIDEV-NOTE: Custom report for work tasks with state
report.specs.columns=id,status.short,work_state,project,tags,due,description
report.specs.filter=status:completed or status:pending +spec
report.specs.labels=ID,St,State,Project,Tags,Due,Description
report.specs.sort=work_state-,due+

# AIDEV-NOTE: Modified list report to include Jira ID, Repository, and Work State
report.list.columns=id,status.short,work_state,start.age,entry.age,depends,project,tags,recur,scheduled.countdown,due.relative,until.remaining,jiraid,repository,description
report.list.labels=ID,St,WS,Active,Age,Deps,Project,Tag,Recur,S,Due,Until,Jira,Repo,Description

# AIDEV-NOTE: Custom report for dependency hierarchy view
# Use `task tree` to see tasks grouped by dependency chains
# Sorts by description to leverage numbering scheme (1., 1.1., 2., 2.1., etc.)

context.work.read=project:salaryhero
context.work.write=project:salaryhero
report.next.columns=id,status.short,work_state,start.age,entry.age,depends,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description
report.next.labels=ID,St,WS,Active,Age,Deps,Project,Tag,Recur,S,Due,Until,Description
report.byproject.description=Tasks grouped by project
report.byproject.columns=id,status.short,work_state,project,tags,due.relative,jiraid,repository,description
report.byproject.labels=ID,St,WS,Project,Tags,Due,Jira,Repo,Description
report.byproject.filter=status:pending
report.byproject.sort=project+,due+
